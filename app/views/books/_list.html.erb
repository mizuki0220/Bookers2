<h2>User info</h2>
<%= image_tag book.user.get_profile_image(100,100) %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= book.user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "編集", edit_user_path(user), class:"btn btn-primary" %>

<h2>New book</h2>
<%= form_with model: book do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>

  <p>Opinion<br>
  <%= f.text_area :body %>
  </p>

  <%= f.submit 'Create Book' %>
<% end %>
